drop table users;
drop table tweets;
drop table authors;
drop table media;
drop table links;

create table users(
    username varchar unique,
    ideo real
);

create table tweets(
    id bigint unique,
    author_id bigint,
    ttext varchar,
    media_id_1 varchar, 
    media_id_2 varchar, 
    link_preview_url varchar,
    created_at timestamp,
    conversation_id bigint,
    in_reply_to_user_id bigint,
    retweet_count integer,
    reply_count integer,
    like_count integer,
    quote_count integer,
    referenced_tweet_type varchar, -- reply, quote, retweet
    referenced_tweet_id bigint,
    scrape_time timestamp,
    ds date
);

create table authors(
    id bigint unique,
    tname varchar,
    username varchar,
    verified boolean,
    profile_image_url varchar,
    is_elite boolean default FALSE,
    ideo real
);

create table media(
    id varchar unique,
    preview_img_url varchar,
    media_url varchar,
    media_type varchar, -- image, video, link
    height integer,
    width integer
);

create table links(
    turl varchar unique,
    hostname varchar,
    title varchar,
    description varchar,
    media_url varchar,
    media_image varchar,
    media_type varchar
);

CREATE INDEX ideo_index
ON authors (ideo);

CREATE INDEX tweets_link_index
ON tweets (link);

CREATE INDEX tweets_media_index_1
ON tweets (media_id_1);

CREATE INDEX tweets_referenced_index
ON tweets (referenced_tweet_id);

CREATE INDEX tweets_ds
ON tweets (ds);

GRANT ALL PRIVILEGES ON ALL TABLES IN SCHEMA public TO testuser;